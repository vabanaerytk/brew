# http://editorconfig.org
[Homebrew/**.rb]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[Taps/homebrew/**.rb]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
# trailing whitespace is crucial for patches
trim_trailing_whitespace = false
